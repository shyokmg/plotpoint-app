{{!-- <!-- Loop over each object in the projects array -->
{{#each clubs as |club| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/project/{{club.id}}">{{club.club_name}}</a>
    </h2>
  </div>
</div>
{{/each}} --}}

<section class="section">
  <div class="container">

    <!-- Members Card -->
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Club Members
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <ul>
              {{#each Users}}
                <li>{{this.firstName}} {{this.lastName}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <!-- Books Card -->
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Club Books
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <ul>
              {{#each Books}}
                <li>{{this.bookName}} by {{this.author}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

    </div>
</section>