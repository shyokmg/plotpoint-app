<section class="section">
    <div class="container">

      <!-- Book Card -->
      <div class="card">
        <header class="card-header">
          <p class="card-header-title text-color">
            Book Details
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <p class="text-color"><strong>Book Name:</strong> {{book.book_name}}</p>
            <p class="text-color"><strong>Author:</strong> {{book.author}}</p>
            <p class="text-color"><strong>Description:</strong> {{book.description}}</p>
            <p class="text-color"><strong>Genre:</strong> {{book.genre}}</p>
          </div>
        </div>
      </div>

      <!-- Reviews Card -->
      <div class="card">
        <header class="card-header">
          <p class="card-header-title text-color">
            Reviews
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <ul>
              {{#each reviews}}
                <li>
                  <p class="text-color"><strong>Reviewer:</strong> {{this.user.first_name}} {{this.user.last_name}}</p>
                  <p class="text-color"><strong>Rating:</strong> {{this.book_rating}}/5</p>
                  <p class="text-color">{{this.review_text}}</p>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
<div class="buttons">
          <a href="/review" class="button is-light text-color">
            Leave a review
          </a>
        </div>
    </div>
  </section>

</body>
</html>